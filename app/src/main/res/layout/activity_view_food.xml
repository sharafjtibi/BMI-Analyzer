<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0983D6"
    android:orientation="vertical"
    tools:context=".Log_in_activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0983D6">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="666dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FAF8F8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_foodList"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Food List"
                    android:textColor="#0983D6"
                    android:textSize="35sp" />

                <FrameLayout
                    android:layout_width="320dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/border1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/food_image1"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/splash_screen"
                            android:visibility="visible"/>

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="match_parent"
                            android:background="#0983D6" />

                        <LinearLayout
                            android:layout_width="145dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/food_name1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salamon"
                                android:textColor="#000000"


                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/food_type1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fish"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/cal_val1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:text="22"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/cal1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:text="cal /g"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <Button
                                android:id="@+id/edit1"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:text="Edit"
                                android:textSize="15sp"
                                app:backgroundTint="#0983D6" />

                            <TextView
                                android:id="@+id/delete1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="53dp"
                                android:layout_marginTop="4dp"
                                android:background="#0983D6"
                                android:gravity="center"
                                android:padding="2dp"
                                android:shadowColor="#FFFFFF"
                                android:text="X"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp" />

                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="320dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/border1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/food_image2"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/photo"
                            android:visibility="visible"
                            />

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="match_parent"
                            android:background="#0983D6" />

                        <LinearLayout
                            android:layout_width="145dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/food_name2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salamon"
                                android:textColor="#000000"


                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/food_type2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fish"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/cal_val2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:text="22"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/cal2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:text="cal /g"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <Button
                                android:id="@+id/edit2"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:text="Edit"
                                android:textSize="15sp"
                                app:backgroundTint="#0983D6" />

                            <TextView
                                android:id="@+id/delete2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="53dp"
                                android:layout_marginTop="4dp"
                                android:background="#0983D6"
                                android:gravity="center"
                                android:padding="2dp"
                                android:shadowColor="#FFFFFF"
                                android:text="X"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp" />

                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="320dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/border1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/food_image3"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/splash_screen"
                            android:visibility="visible"
                            />

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="match_parent"
                            android:background="#0983D6" />

                        <LinearLayout
                            android:layout_width="145dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/food_name3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salamon"
                                android:textColor="#000000"


                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/food_type3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fish"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/cal_val3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:text="22"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/cal3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:text="cal /g"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <Button
                                android:id="@+id/edit3"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:text="Edit"
                                android:textSize="15sp"
                                app:backgroundTint="#0983D6" />

                            <TextView
                                android:id="@+id/delete3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="53dp"
                                android:layout_marginTop="4dp"
                                android:background="#0983D6"
                                android:gravity="center"
                                android:padding="2dp"
                                android:shadowColor="#FFFFFF"
                                android:text="X"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp" />

                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>


        </FrameLayout>


    </FrameLayout>


</LinearLayout>

